generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(uuid())
  name            String          @default("User")
  //Relations
  itineraries     Itinerary[]
  likedActivities Activity[]      @relation("likedActivities")
  interests       Interest[]
}

model Itinerary {
  id              String          @id @default(autoincrement())
  userId        String
  location        String
  title           String
  startDate       DateTime
  endDate         DateTime
  //Relations
  user            User            @relation(fields: [userId], references: [id])
  activities      Activity[]      
}

model Activity {
  id              String          @id @default(autoincrement())
  location        String
  title           String
  category        String
  startTime       DateTime
  endTime         DateTime
  liked           Boolean         @default(false)
  itineraryId     String?
  //Relations
  itinerary       Itinerary?      @relation(fields: [itineraryId], references: [id])
  users            User[]         @relation("likedActivities")    
}

model Interest {
  id            String           @id @default(autoincrement())
  userId        String
  category      String
  score         Int              @default(0)
  //Relations
  user          User             @relation(fields: [userId], references: [id])
}

enum ActionType {
  CLICK
  SEARCH
  LIKE
}