generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id
  email           String          @unique
  name            String          @default("User")
  //Relations
  itineraries     Itinerary[]
  likedActivities Activity[]      @relation("likedActivities")
  interests       Interest[]
}

model Itinerary {
  id              Int             @id @default(autoincrement())
  userId          String
  cityId          Int
  title           String
  description     String
  startDate       DateTime
  endDate         DateTime
  //Relations
  user            User            @relation(fields: [userId], references: [id])
  activities      Activity[]
  city            City            @relation(fields: [cityId], references: [id])
}

model Activity {
  id          Int      @id @default(autoincrement())
  title       String
  category    String
  startTime   DateTime
  endTime     DateTime
  liked       Boolean  @default(false)
  xid         String
  image       String?
  wikiLink    String?
  itineraryId Int?
  // Relations
  itinerary   Itinerary? @relation(fields: [itineraryId], references: [id])
  users       User[]     @relation("likedActivities")
}

model Interest {
  id              Int               @id @default(autoincrement())
  userId          String?
  cityId          Int?
  category        String
  score           Int              @default(0)
  //Relations
  user            User?             @relation(fields: [userId], references: [id])
  city            City?             @relation(fields: [cityId], references: [id])
}

model City {
  id              Int               @id @default(autoincrement())
  name            String
  itineraries     Itinerary[]
  interests       Interest[]
}

enum ActionType {
  CLICK
  SEARCH
  LIKE
}

model Template {
  id        Int      @id @default(autoincrement())
  type      String   // 'active' or 'passive'
  times     String[]
}
